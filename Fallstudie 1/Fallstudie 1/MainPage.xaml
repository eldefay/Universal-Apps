<Page
    x:Class="Fallstudie_1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Fallstudie_1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="Button" x:Key="menuButton">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Width" Value="200"/>
        </Style>
    </Page.Resources>
    
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel HorizontalAlignment="Center">
            <TextBlock x:Uid="tbl_appName" FontSize="64" Foreground="#FF556270"/>
            <Button x:Uid="b_newGame" Click="b_newGame"  Style="{StaticResource menuButton}"/>
            <Button x:Uid="b_contGame" Style="{StaticResource menuButton}"/>
            <Button x:Uid="b_highscore" Style="{StaticResource menuButton}"/>
            <Button x:Uid="b_settings" Click="b_settings" Style="{StaticResource menuButton}"/>
        </StackPanel>
    </Grid>
</Page>
